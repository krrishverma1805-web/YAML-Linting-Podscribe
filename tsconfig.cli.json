{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": false,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.cli.tsbuildinfo",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "noEmit": false,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "verbatimModuleSyntax": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/vite-env.d.ts",
        "src/**/*.tsx"
    ]
}